<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBg"
    tools:context=".activity.LifanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="#E5E5E5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_main"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/but_more"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/but_more_radius_bg_black"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/but_live"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/but_like_radius_bg_white"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/but_mass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/but_mass_radius_bg_white"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/but_label"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/but_label_radius_bg_white"
                style="?android:attr/borderlessButtonStyle"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/but_querytags"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="540dp"
                android:src="@drawable/ic_query_whach"
                android:clickable="true"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:maxImageSize="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/activitys_radius_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_arrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="H e n t a i"
                    android:textColor="@color/colorTextTitle"
                    android:textSize="20sp" />
            </LinearLayout>


            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/activity_edit_bg"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:maxLength="16"
                android:padding="5dp"
                android:singleLine="true"
                android:textFontWeight="1" />

            <FrameLayout
                android:id="@+id/fragmentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>